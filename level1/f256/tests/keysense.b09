PROCEDURE Eval
PARAM A:BYTE; BIT:INTEGER

IF LAND(A,BIT) = BIT THEN
  PRINT "DOWN";
ELSE
  PRINT "UP  ";
ENDIF

PROCEDURE KeySense

TYPE REGISTERS=CC,A,B,DP:BYTE;X,Y,U:INTEGER
DIM  REGS:REGISTERS 
DIM  PATH,CALLCODE:BYTE 
DIM ISCTRL, ISALT, ISSHIFT, ISUP, ISDOWN, ISLEFT, ISRIGHT, ISSPACE : BYTE
DIM I : INTEGER

RUN FOENIX("CLEAR")
PRINT "Shift: "
PRINT "Ctrl:  "
PRINT "Alt:   "
PRINT "Up:    "
PRINT "Down:  "
PRINT "Left:  "
PRINT "Right: "
PRINT "Space: "
10
REGS.A=1
REGS.B=$27
CALLCODE=$8D 

RUN SYSCALL(CALLCODE, REGS)
RUN FOENIX("CURXY", 8, 0)
RUN Eval(REGS.A, 1)
RUN FOENIX("CURXY", 8, 1)
RUN Eval(REGS.A, 2)
RUN FOENIX("CURXY", 8, 2)
RUN Eval(REGS.A, 4)
RUN FOENIX("CURXY", 8, 3)
RUN Eval(REGS.A, 8)
RUN FOENIX("CURXY", 8, 4)
RUN Eval(REGS.A, 16)
RUN FOENIX("CURXY", 8, 5)
RUN Eval(REGS.A, 32)
RUN FOENIX("CURXY", 8, 6)
RUN Eval(REGS.A, 64)
RUN FOENIX("CURXY", 8, 7)
RUN Eval(REGS.A, 128)
GOTO 10
